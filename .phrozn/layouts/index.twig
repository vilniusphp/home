{% extends "base.twig" %}

{% block customMeta %}
    <style type="text/css">
        {% if this.design.mainEventBackGround and this.design.mainEventTextColor %}
            body .main-event {
                color: {{ this.design.mainEventTextColor }};
                background: url('{{ this.design.mainEventBackGround }}') no-repeat center center fixed;
                -webkit-background-size: cover;
                -moz-background-size: cover;
                -o-background-size: cover;
                background-size: cover;
            }
            body .main-event .well, body .main-event .jumbotron {
                color: #333333;
            }
        {% endif %}
    </style>
{% endblock %}

{% block content %}

{# Main event #}
<div class="main-event">
    <div class="centered">
        {% include 'layouts/widgets/nextevent.twig' %}
    </div>
</div>

{# Old events and meta #}
<div class="content centered row">
    <h2>BuvÄ™ susitikimai</h2>
    <div class="col-sm-6 archive">
        {% include 'layouts/widgets/archive.twig' %}
    </div>
    <div class="col-sm-6">
        <div class="friends col-md-6">
            {% include 'layouts/widgets/important.twig' %}
            {% include 'layouts/widgets/friends.twig' %}
        </div>
        <div class="social-widget col-md-6">
            {% include 'layouts/widgets/social-widgets.twig' %}
            <div class="masthead">
                <ul class="nav nav-pills pull-right">
                    {% include 'layouts/widgets/social-links.twig' %}
                </ul>
            </div>
        </div>
        <div class="sponsors col-md-12">
            {% include 'layouts/widgets/sponsors.twig' %}
        </div>
    </div>
</div>

{% endblock %}
