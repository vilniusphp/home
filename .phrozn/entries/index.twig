        {% endif %}
    {% endif %}
{% endfor %#}

<div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
        {% for event in this.events %}
            {% if loop.index > 1 %}
                {% if loop.index % 2 == 0  %}
                <div class="item {% if loop.index == 2 %}active{% endif %}">
                {% endif %}
                    <div class="event span5 offset1">
                        <h3>{{ event.name }}</h3>
                        <b>{{ event.date }}</b>
                        <br>

                        {% if event.github %}
                        <a class="label label-info" href="{{ event.github }}">Medžiaga @ GitHub</a>
                        {% endif %}

                        <h4>Pranešėjai</h4>
                        <ol> 
                            {% if event.speakers|length == 0 %}
                            Turi ką papasakoti? Rašyk mums!
                            {% endif %}

                            {% for speaker in event.speakers %}
                            <li>
                                <strong>{{ speaker.name }}</strong>
                                {% if speaker.linkedin %}
                                <a href="{{ speaker.linkedin }}" title="{{ speaker.name }}" target="_blank"><img src="media/img/linkedin.png" alt="" /></a>
                                {% endif %}
                                <br>
                                {{ speaker.title }}
                            </li>
                            {% endfor %}
                        </ol>
                    </div>
                {% if loop.index % 2 == 1 or (loop.index % 2 == 0 and loop.last) %}
                </div>
                {% endif %}
            {% endif %}
        {% endfor %}
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div>
</div>
